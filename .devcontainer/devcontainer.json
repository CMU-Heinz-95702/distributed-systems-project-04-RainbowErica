{
  "name": "Java Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/java:0-11",
  "features": {
    "docker-in-docker": "latest"
  },
  "forwardPorts": [8080],
  "postCreateCommand": "echo 'Codespace Ready!'",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven"
      ]
    }
  }
}
